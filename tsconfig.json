{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "es2015",
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "sourceMap": true,
        "target": "es2017",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "files": [
        "./src/main/webapp/main.ts"
    ],
    "include": [
        "./node_modules/webgl-strict-types/index.d.ts",
        "**/*.ts"
    ],
    "exclude": [
        "./src/main/webapp/test.ts",
        "**/*spec.ts"
    ]
}
